@model LoginViewModel

@{ Layout = null; }


<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/fonts/css/all.min.css" rel="stylesheet" />
<link href="~/css/style.css" rel="stylesheet" />



<style>


    .zoom:hover {
        transform: scale(1.2); /* (120% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
    }
</style>

<div class="main">
    <section class="sign-in" style="margin-bottom:50px">
        <div class="container">
            <div class="signin-content m-2">
                <div class="signin-image">
                    <figure>

                        <img src="~/img/signin-image.jpg" />
                    </figure>
                    <a href="/account/register" class="signup-image-link">Create an account</a>
                </div>

                <div class="signin-form">
                    <h2 class="form-title">Login</h2>
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email"><i class="fas fa-envelope"></i></label>

                            <input asp-for="Email" placeholder="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <label asp-for="Password"><i class="fas fa-lock"></i></label>
                            <input asp-for="Password" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>


                        <div class="form-group">

                            <input asp-for="RememberMe" class="custom-checkbox" />
                            <label asp-for="RememberMe" class="label-agree-term">

                                <span><span></span></span>@Html.DisplayNameFor(m => m.RememberMe)
                            </label>

                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="signin" id="signin" class="form-submit" value="Log in" />
                            <a class="link-primary" style=" padding: 10px; " asp-action="ForgotPassword">Forgot Password</a>
                        </div>





                    </form>


                    <form method="post" asp-action="ExternalLogin">


                        <div>
                            <h6>Or login with</h6>

                            <button type="submit" class=" m-1 btn btn-primary zoom" style="background-color: #3b5998;"
                                    name="provider" value="facebook" @*map With argument Provide inert Method ExternalLogin*@
                                    title="Log in using your facebook account">
                                <i class="fab fa-facebook-f"></i>
                            </button>

                            <button type="submit" class=" m-1 btn btn-danger zoom" style="background-color: #dd4b39;"
                                    name="provider" value="google" @*map With argument Provide inert Method ExternalLogin*@
                                    title="Log in using your Google account">
                                <i class="fab fa-google"></i>
                            </button>


                        </div>




                    </form>


                </div>
            </div>
        </div>
    </section>

</div>

<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

