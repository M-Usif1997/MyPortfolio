@model RegisterViewModel

@{ Layout = null; }

<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/fonts/css/all.min.css" rel="stylesheet" />
<link href="~/css/style.css" rel="stylesheet" />





<div class="main" style="padding-bottom:0px;">
    <section class="signup">
        <div class="container">
            <div class="signup-content m-2">
                <div class="signup-form">
                    <h2 class="form-title">Register</h2>
                    <form enctype="multipart/form-data" asp-controller="Account" asp-action="Register" method="post" class="mt-3">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <div>
                                <label asp-for="FirstName"><i class="fas fa-user"></i></label>
                            </div>

                            <input asp-for="FirstName" placeholder="First Name">
                            <span asp-validation-for="FirstName" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <div>
                                <label asp-for="LastName"><i class="fas fa-user"></i></label>
                            </div>

                            <input asp-for="LastName" placeholder="Last Name">
                            <span asp-validation-for="LastName" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="UserName"><i class="far fa-user"></i></label>

                            <input asp-for="UserName" placeholder="UserName">
                            <span asp-validation-for="UserName" class="text-danger"></span>


                        </div>

                        <div class="form-group">
                            <label asp-for="Email"><i class="fas fa-envelope"></i></label>

                            <input asp-for="Email" placeholder="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>


                        </div>
                        <div class="form-group">
                            <label asp-for="Password"><i class="fas fa-lock"></i></label>

                            <input asp-for="Password" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>


                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword"><i class="fas fa-lock"></i></label>

                            <input asp-for="ConfirmPassword" placeholder="Confirm Password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>


                        </div>

                        <div class="form-group">
                            <label asp-for="City"><i class="fas fa-city"></i></label>

                            <input asp-for="City" placeholder="City">


                        </div>
                        @*<div class="form-group">
                                <label asp-for="PhoneNumber"><i class="fas fa-phone"></i></label>

                                <input asp-for="PhoneNumber" placeholder="PhoneNumber">


                            </div>*@
                        <div class="form-group">

                            <label asp-for="Profile"><i class="fas fa-briefcase"></i></label>
                            <input asp-for="Profile" placeholder="Job Description">
                            <span asp-validation-for="Profile" class="text-danger"></span>


                        </div>



                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                        </div>

                    </form>

                </div>
                <div class="signup-image">
                    <figure>
                        <img src="~/img/signup-image.jpg" />
                    </figure>
                    <a href="/account/Login" class="signup-image-link">I am already Have Account</a>
                </div>
            </div>
        </div>
    </section>

</div>





<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
